<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/iv_employee_img_id"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/employee_profile_image"
            android:src="@drawable/employee_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/font"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_employee_img_id"
            app:layout_constraintStart_toStartOf="@+id/iv_employee_img_id"
            app:layout_constraintTop_toBottomOf="@+id/iv_employee_img_id"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/tv_employee_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/font"
            android:text="@string/textviews"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_name"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_name"
            tools:text="+7483874902" />

        <LinearLayout
            android:id="@+id/linear_layout_employee_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tv_employee_phone"
            app:layout_constraintStart_toStartOf="@+id/tv_employee_phone"
            app:layout_constraintTop_toBottomOf="@+id/tv_employee_phone">

            <TextView
                android:id="@+id/tv_employee_email_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font"
                android:text="@string/email"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_employee_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/font"
                android:text="@string/sss"
                android:textSize="24sp"
                tools:text="john@gmail.com" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_employee_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linear_layout_employee_email"
            app:layout_constraintStart_toStartOf="@+id/linear_layout_employee_email"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_employee_email">

            <TextView
                android:id="@+id/tv_employee_address_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font"
                android:text="@string/address"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_employee_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/font"
                android:text=""
                android:textSize="24sp"
                tools:text="Dhaka" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_employee_jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_employee_address"
            app:layout_constraintStart_toStartOf="@+id/linearLayout_employee_address"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_employee_address">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font"
                android:text="@string/jobTitle"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_employee_jobTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/font"
                android:text=""
                android:textSize="24sp"
                tools:text="Software Engineer" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_employee_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_employee_jobTitle"
            app:layout_constraintStart_toStartOf="@+id/linearLayout_employee_jobTitle"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_employee_jobTitle">


            <TextView
                android:id="@+id/tv_employee_salary_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font"
                android:text="@string/salary"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_employee_salary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/font"
                android:text=""
                android:textSize="24sp"
                tools:text="50000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_employee_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout_employee_salary"
            app:layout_constraintStart_toStartOf="@+id/linearLayout_employee_salary"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_employee_salary">


            <TextView
                android:id="@+id/tv_employee_division_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font"
                android:text="@string/division"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_employee_division"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/font"
                android:text=""
                android:textSize="24sp"
                tools:text="Dhaka" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>